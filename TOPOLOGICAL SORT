def topological_sort_util(v, visited, stack, graph):
    visited[v] = True
    for i in graph[v]:
        if not visited[i]:
            topological_sort_util(i, visited, stack, graph)
    stack.insert(0, v)

def topological_sort(graph, V):
    visited = [False] * V
    stack = []
    for i in range(V):
        if not visited[i]:
            topological_sort_util(i, visited, stack, graph)
    return stack

graph = {
    0: [1, 2],
    1: [3],
    2: [3],
    3: []
}

V = 4
result = topological_sort(graph, V)
print("Topological Sort:")
print(result)

OUTPUT:
Topological Sort:
[0, 2, 1, 3]

